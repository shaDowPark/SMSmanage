<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.administrator.smsmanage.AutoRelayActivity"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
       >

        <TextView
            android:text="自动回复"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:background="@android:color/background_light"
            android:layout_height="40dp"
            android:id="@+id/textView" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="请输入电话号码"
            android:ems="10"
            android:id="@+id/editTextNumber"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除回复号码"
            android:id="@+id/buttonDelete1"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/editTextNumber"
            android:layout_toEndOf="@+id/editTextNumber" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="增加号码"
            android:id="@+id/buttonAddNumber"
            android:layout_above="@+id/editTextString"
            android:layout_alignLeft="@+id/buttonAddString"
            android:layout_alignStart="@+id/buttonAddString" />

        <TextView
            android:text="自动回复内容"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:background="@android:color/background_light"
            android:layout_height="40dp"
            android:id="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="gone"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextNumber"
            android:id="@+id/editTextString"
            android:hint="请输入内容"
            android:ems="20"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除回复内容"
            android:id="@+id/buttonDelete2"
            android:layout_alignTop="@+id/textViewString"
            android:layout_alignLeft="@+id/buttonDelete1"
            android:layout_alignStart="@+id/buttonDelete1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="增加内容"
            android:id="@+id/buttonAddString"
            android:layout_below="@+id/editTextString"
            android:layout_alignLeft="@+id/buttonDelete1"
            android:layout_alignStart="@+id/buttonDelete1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="没有号码"
            android:id="@+id/textViewNumber"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15sp"
            android:text="没有内容"
            android:id="@+id/textViewString"
            android:layout_below="@+id/textViewNumber"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="65dp" />

    </RelativeLayout>



</LinearLayout>
